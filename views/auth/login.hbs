<main class="form-signin w-100 m-auto">
  <div class="text-center mb-5">
    <img
      class="mx-auto d-block logo"
      src="/images/logo-transparent.png"
      alt="house logo"
    />
    <h1>{{appTitle}}</h1>
  </div>

  <h2 class="fw-bold">Welcome back!</h2>
  <h4>Please sign in to your account</h4>

  <form action="/auth/login" method="POST">
    <div>
      <input
        type="email"
        class="form-control"
        name="username"
        placeholder="Email"
      />
    </div>
    <div>

      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="Password"
      />
    </div>

    {{#if errorMessage}}
      <div class="error">
        {{errorMessage}}
      </div>
    {{/if}}

    <button
      type="submit"
      class="w-100 btn btn-lg btn-secondary fw-bold border-dark bg-dark mt-5"
    >Sign In</button>
  </form>

</main>

<div>
  <p><small>Don't have an account?
      <br />
      <a href="/auth/signup">Click here to Sign up</a>
    </small></p>
</div>