<main class="w-100 m-auto">
  <div class="container text-start">
  {{!-- {{log property}} --}}
  <h4 class="fw-bold">{{tenant.firstName}} {{tenant.lastName}}'s details</h4>
  {{#with tenant}}
    <div class="container p-4 border shadow-sm rounded bg-white bg-opacity-75 m-auto text-start">

    <form class="row row-cols-lg-auto g-3 align-items-center" action="/tenant/{{this._id}}" method="post" enctype="multipart/form-data">
      {{> tenantpartial this}}
        <div class="col-lg-12">
          <label>
            <span class="hint-text">Select property or properties</span>
          </label>
          <select name="property" class="form-select" multiple>
            <option value="">&nbsp;</option>
              {{#each ../properties}}
                {{log this._id}}
                <option value="{{this._id}}" {{#if (isIncluded this._id @root.tenant.property)}} selected="selected" {{/if}} >{{this.referenceID}}</option>
              {{/each}} 
          </select>
      </div>

      <div>
        <button type="submit" class="col btn btn-secondary border-dark bg-dark">Update tenant</button>
        <a href="/tenant/delete/{{id}}" class="btn border-dark bg-white">Delete tenant</a>        
      </div>
    </form>
    </div>
  {{/with}}
</div>
</main>