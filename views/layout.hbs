<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;800&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="/stylesheets/style.css" />

  </head>

  <body class="d-flex h-100">
    <div class="cover-container d-flex w-100 mx-auto flex-column text-center">
      {{#if userInSession}}
        <header class="p-3 text-bg-light shadow-sm">
          <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
              <a href="/dashboard" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="/images/logo-transparent.png" alt="Rentalpropo logo" width="50" />
                <h5 class="px-2 py-2 my-auto fw-bold text-dark">{{appTitle}}</h5>
              </a>
              <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/dashboard" class="nav-link">Home</a></li>
                <li><a href="/property" class="nav-link">Properties</a></li>
                <li><a href="/tenant" class="nav-link">Tenants</a></li>
              </ul>

              {{#if userInSession.firstName}}
                <div class="d-flex flex-column m-2">
                  <small class="hint-text">{{userInSession.firstName}}
                    {{userInSession.lastName}}
                    ·
                    {{capitalizedRole}}</small>
                  <small class="hint-text">{{userInSession.username}}</small>
                </div>
              {{else}}
                <div class="d-flex flex-column m-2">
                  <small class="hint-text">{{userInSession.username}}</small>
                  <small class="hint-text">{{capitalizedRole}}</small>
                </div>
              {{/if}}

              <div class="text-end">
                <a href="/userProfile" class="btn btn-secondary bg-dark"><small>Profile</small>
                </a>
                <a href="/auth/logout" class="btn bg-white"><small>Logout</small>
                </a>

              </div>
            </div>
          </div>
        </header>
      {{/if}}

      <div class="w-100 m-auto">
        {{{body}}}
      </div>

      <footer class="footer py-1">
        <div class="container">
          <span class="text-muted hint-text"><small>2022 Rentalprop @ IronHack · Antonio Piquer - João Serafim</small></span>
        </div>
      </footer>
    </div>

    <script src="/js/script.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

  </body>

</html>